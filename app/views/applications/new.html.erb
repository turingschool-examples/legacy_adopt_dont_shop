<h1>New Application</h1>
<%= form_tag "/applications" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name  %><br>

  <%= label_tag :street_address %>
  <%= text_field_tag :street_address  %><br>

  <%= label_tag "City" %>
  <%= text_field_tag :city  %><br>

  <%= label_tag "State" %>
  <%= text_field_tag :state  %><br>

  <%= label_tag "Zip Code" %>
  <%= number_field_tag :zip  %><br>

  <%= label_tag "Description:" %>
  <%= text_field_tag :description %><br>

  <h1><%= submit_tag 'Submit Application' %></h1>
  <% end %>
