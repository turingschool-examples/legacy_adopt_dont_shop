<%= form_with url: "/applications/new", method: "post", local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>

  <%= f.label :description_of_applicant %>
  <%= f.text_field :description_of_applicant %>

  <%= f.label :pet_name %>
  <%= f.text_field :pet_name %>

  <%= f.label :application_status %>
  <%= f.text_field :application_status %>

  <%= f.submit "Create Pet" %>
<% end %>
