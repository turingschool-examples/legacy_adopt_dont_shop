<%= form_tag '/applications' do %>
  <h2>Apply For A Pet:</h2>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>
  <%= label_tag :street_address %>
  <%= text_field_tag :street_address %><br>
  <%= label_tag :city %>
  <%= text_field_tag :city %><br>
  <%= label_tag :state %>
  <%= text_field_tag :state %><br>
  <%= label_tag :zip_code %>
  <%= text_field_tag :zip_code%><br>
  <%= label_tag :Why_do_you_want_a_pet? %>
  <%= text_field_tag :description%><br>
  <%= submit_tag 'Submit Application' %>
<% end %>
