
<h2>Application</h2>
Name: <%= @application.name %><br>
Street: <%= @application.street_address %><br>
City: <%= @application.city %><br>
State: <%= @application.state %><br>
Zip-code: <%= @application.zip_code %><br>
Application Status: <%= @application.status %><br>

<% if local_assigns[:in_progress] %>
  <h3>Add a pet to this application</h3>
  <section class="pet_search">
    <%= form_with application_path(@application), method: :get do %>
    <%= form.label :pet_search %>
    <%= form.text_field :pet_search %>
    <%= form.submit 'Search by Pet Name'%>
  </section>
  <% end %>

  <% if params[:pet_search] %>
    <% @pets.each do |pet| %>
      <%= image_tag "#{pet.image}", :size => '80x80' %>
      <%= link_to "#{pet.name} - Adopt me", application_pets_path(application_id: @application.id, pet_id: pet.id, status: "Pending"), method: :post %><br>
    <% end %>
  <% end %>
<% end %>



<h3>Pets applied for:</h3>
<section id="pets-applied-for-<%= @application.id  %>">
  <% @application.pets.each do |pet| %>
    <%= image_tag "#{pet.image}", :size => '80x80' %>
    <%= link_to "#{pet.name}", pet_path(pet), id: "pet-id-#{pet.id}" %><br>
  <% end %>
</section>
