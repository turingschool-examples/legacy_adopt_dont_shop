<h1> Application for <%= "#{@application.first_name} #{@application.last_name}" %></h1>
Address: <%= @application.address %><br>
City: <%= @application.city %><br>
State: <%= @application.state %><br>
Zipcode: <%= @application.zipcode %><br>
Description: <%= @application.description %><br>
Pets' Names:
<div class="nav-bar">
  <% @application.pets.each do |pet| %>
  <p><%= pet.name %></p>
  <% end %>
</div>
Application Status: <%= @application.capitalized_status %>
<% if @application.in_progress? %>
  <section>
    <h3>Add a Pet to this Application</h3>
    <p>
      <%= form_with url:"/applications/#{@application.id}", method: :get, local: true do |form| %>
      <%= form.label :pet_name %>
      <%= form.text_field :pet_name %>
      <%= form.submit 'Search' %>
      <% end %>
    </p>
    <% if @pets %>
      <% @pets.each do |pet| %>
        <%= pet.name %>
        <%= form_with url:"/application_pets", method: :post, local: true do |form| %>
        <%= form.hidden_field :pet_id, value: "#{pet.id}" %>
        <%= form.hidden_field :application_id, value:"#{@application.id}" %>
        <%= form.submit 'Adopt this Pet' %>
        <% end %>
      <% end %>
    <% end %>
  </section>
  <% if !@application.pets.empty? %>
    <div id='submittion'>
      <h3>Why I would make a good owner for these pet(s):</h3>
        <%= form_with url:"/applications/#{@application.id}", method: :patch, local: true do |form| %>
        <%= form.text_area :description%></br>
        <%= form.hidden_field :status, value: :pending %>
        <%= form.submit 'Submit' %>
        <% end %>
    </div>
  <% end %>
<% end %>
