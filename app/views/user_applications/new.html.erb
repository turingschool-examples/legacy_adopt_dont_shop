<%= form_with url: "/user_applications", method: :post, local: true do |f| %>
  <%= f.label :name, 'Name:' %><br>
  <%= f.text_field :name, required: :true %><br>

  <%= f.label :address, 'Street Address:' %><br>
  <%= f.text_field :address, required: :true %><br>

  <%= f.label :city, 'City:' %><br>
  <%= f.text_field :city, required: :true %><br>

  <%= f.label :state, 'State:' %><br>
  <%= f.text_field :state, required: :true %><br>

  <%= f.label :zip, 'Zip Code:' %><br>
  <%= f.text_field :zip, required: :true %><br>

  <%= f.label :describe_why_you_would_be_a_good_owner_in_255_words_or_less %><br>
  <%= f.text_field :description, required: :true %><br>

  <%= f.submit 'Submit Application' %>

<% end %>